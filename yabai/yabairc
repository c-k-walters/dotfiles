# global layout set to managed tiled (default is float)
yabai -m config --space 1 layout bsp

# New windows split to the left
yabai -m config window_placement second_child

#padding and gaps
yabai -m config top_padding 5
yabai -m config bottom_padding 5
yabai -m config left_padding 5
yabai -m config right_padding 5
yabai -m config window_gap 5

# make sure all windows always occupy the same space
yabai -m config auto_balance off
yabai -m config split_ratio 0.6

# with SIP enabled
yabai -m config window_border off

# yabai -m config focus_follows_mouse autoraise

yabai -m rule --add label="Godot" app="^Godot$" manage=off
